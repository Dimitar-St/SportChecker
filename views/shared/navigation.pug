mixin nav()
    nav
      // Dropdown Structure
      ul#dropdown1.dropdown-content(style="margin-top: 350%;")
        li
          a(href="#!") one
        li
          a(href="#!") two
        li.divider
        li
          a(href="#!") three
      nav#5e35b1.deep-purple.darken-1
        .nav-wrapper
          a.brand-logo.col(href="/") SportChecker
          ul.right.hide-on-med-and-down
            li
              a(href="sass.html") Sass
            li
              a(href="badges.html") Components
            // Dropdown Trigger
            li
              a.dropdown-trigger(href="#!" data-target="dropdown1")
                | Dropdown
                i.material-icons.right arrow_drop_down
            li.right(style="position: relative; left: 80%;")
                a.waves-effect.waves-light.btn.btn-default(href='/sign-in') Sign in
            li.right(style="position: relative; left: 120%;")
                a.waves-effect.waves-light.btn.btn-default(href='/sign-up') Sign up

    